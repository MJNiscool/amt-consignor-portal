{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false, // Temporarily disable to avoid TS6133 errors
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,     // Should be inside compilerOptions
    "esModuleInterop": true,  // Should be inside compilerOptions
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts" // Include all .ts files within the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules folder
    "lib"           // Exclude the output directory itself
  ]
}
